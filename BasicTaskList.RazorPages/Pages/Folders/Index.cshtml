@page
@model BasicTaskList.RazorPages.Pages.Folders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].Name)
            </th>
            <th>
                Tasks Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Folder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tasks.Count)
            </td>
            <td>
                <a asp-page="../Tasks/Index" asp-route-id="@item.Id">Show Tasks</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Rename</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

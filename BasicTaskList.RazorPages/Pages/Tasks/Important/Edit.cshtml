@page
@model BasicTaskList.RazorPages.Pages.Tasks.Important.EditModel

@{
    ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Task.Id" />
            <div class="form-group">
                <label asp-for="Task.Name" class="control-label"></label>
                <input asp-for="Task.Name" class="form-control" />
                <span asp-validation-for="Task.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Notes" class="control-label"></label>
                <input asp-for="Task.Notes" class="form-control" />
                <span asp-validation-for="Task.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.DueDate" class="control-label"></label>
                <input asp-for="Task.DueDate" type="date" class="form-control" />
                <span asp-validation-for="Task.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Task.IsImportant" /> @Html.DisplayNameFor(model => model.Task.IsImportant)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Task.IsComplete" /> @Html.DisplayNameFor(model => model.Task.IsComplete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Task.FolderId" class="control-label"></label>
                <select asp-for="Task.FolderId" class="form-control" asp-items="ViewBag.FolderNames"></select>
                <span asp-validation-for="Task.FolderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
